---
import Header from "@/components/header.astro";
import Layout from "@/components/layout.astro";
import LinksPage from "@/components/links/index.astro";

const pageTitle = "Links | GeeksBlaBla";
const pageDesc =
  "Connect with GeeksBlaBla community across different platforms and discover our projects.";
---

<Layout title={pageTitle} description={pageDesc}>
  <div class="main">
    <Header />
    <main class="mx-auto max-w-3xl px-4 py-12">
      <div class="mb-12 text-center">
        <h1 class="mb-4 text-4xl font-bold">Connect with GeeksBlaBla</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Follow us on social media and check out our community projects
        </p>
      </div>
      <LinksPage />
    </main>
  </div>
</Layout>
