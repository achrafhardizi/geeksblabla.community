---
type Props = {
  src: string;
};

const { src } = Astro.props;
const autoplay = import.meta.env.PROD ? true : false;
---

<media-theme-sutro
  class="aspect-w-16 aspect-h-9 aspect-video w-full overflow-hidden rounded-md"
>
  <youtube-video
    src={src}
    slot="media"
    playsinline
    autoplay={autoplay}
    crossorigin></youtube-video>
</media-theme-sutro>

<script
  is:inline
  type="module"
  src="https://cdn.jsdelivr.net/npm/youtube-video-element@1.1/+esm"></script>

<script
  is:inline
  type="module"
  src="https://cdn.jsdelivr.net/npm/player.style/sutro/+esm"></script>
