---
interface Props {
  src?: string;
  alt: string;
  size?: "sm" | "md" | "lg";
}

const { src, alt, size = "md" } = Astro.props;

const sizeClasses = {
  sm: "w-8 h-8",
  md: "w-12 h-12",
  lg: "w-16 h-16",
};
const DefaultAvatar = "/avatars/default-avatar.svg";
---

<img
  src={src || DefaultAvatar}
  alt={alt}
  class={`rounded-full object-cover ${sizeClasses[size]}`}
/>
